<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FDFFFE"
    android:divider="@drawable/ic_gradient_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HomeScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#A90394F4"
        android:backgroundTint="#FBFBFB"
        android:shadowColor="#FFFFFF"
        android:text="User Profile"
        android:textAlignment="center"
        android:textColor="#535050"
        android:textColorHighlight="#F3ECEC"
        android:textSize="30dp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/u_image"
        android:layout_width="136dp"
        android:layout_height="112dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foto_11"
        app:civ_border_color="#000000"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xmiddle"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="match_parent"

        android:layout_height="58dp"
        android:padding="@dimen/spacing_xmiddle"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_nama"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_alamat"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xmiddle"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_tempatlahir"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xmiddle"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_tgllahir"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xmiddle"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_notelp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xmiddle"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xmiddle"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_gradient_bg"
        android:text="Log out"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!--    <Button-->
    <!--        android:id="@+id/edit"-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="35dp"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:layout_marginTop="15dp"-->
    <!--        android:background="@drawable/round_btn"-->
    <!--        android:text="Edit"-->
    <!--        android:textColor="#fff" />-->

</LinearLayout>